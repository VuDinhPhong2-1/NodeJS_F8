<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div style="padding-top: 20px" class="col-sm-6 col-lg-4">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}">
                    <img style="width: 150px; padding-top=20px" class="card-img-top" src="{{this.image}}"
                        alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>